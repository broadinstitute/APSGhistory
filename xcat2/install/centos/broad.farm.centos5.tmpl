lang en_US
langsupport en_US
network --device=eth0 --bootproto dhcp --mtu=1500
network --device=eth1 --bootproto dhcp --mtu=9000

#
# Where's the source?
# nfs --server hostname.of.server or IP --dir /path/to/RH/CD/image
#
#nfs --server #XCATVAR:INSTALL_NFS# --dir #XCATVAR:INSTALL_SRC_DIR#
url --url http://#TABLE:noderes:$NODE:nfsserver#/install/#TABLE:nodetype:$NODE:os#/#TABLE:nodetype:$NODE:arch#

#device ethernet e100
keyboard "us"

#
# Clear the MBR
#
zerombr yes

#
# Wipe out the disk
#
clearpart --all --initlabel
#clearpart --linux

#
# Customize to fit your needs
#
#Partition Table for non-raided systems
part / --size 8192 --fstype ext3
part swap --size 8192
part /local --size 1024 --grow --fstype ext4

#No RAID
#/boot really significant for this sort of setup nowadays?
#part /boot --size 50 --fstype ext3
#part / --size 8192 --fstype ext3
#part /usr --size 8192 --fstype ext3
#part /var --size 8192 --fstype ext3
#part swap --size 8192
#part /tmp --size 8192 --fstype ext3
#part /local --size 1024 --grow --fstype ext3


#RAID 0 /scr for performance
#part /boot --size 50 --fstype ext3
#part / --size 512 --grow --ondisk sda
#part /usr --size 4096 --ondisk sda
#part /var --size 1024 --ondisk sdb
#part swap --size 8192 --ondisk sda
#part /tmp --size 2048 --ondisk sda
#part swap --size 8192 --ondisk sdb
#part raid.01 --size 8192 --grow --ondisk sda
#part raid.02 --size 8192 --grow --ondisk sdb
