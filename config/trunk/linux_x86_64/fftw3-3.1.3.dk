#c libraries
#d http://www.fftw.org/index.html 

# Remove any currently used versions
unuse -q `dk_rep 'fftw3*'`

# Set up environment for using library
dk_alter PATH /broad/tools/Linux/x86_64/pkgs/fftw_gcc-4.3.2_3.1.3/bin
dk_alter MANPATH /broad/tools/Linux/x86_64/pkgs/fftw_gcc-4.3.2_3.1.3/share/man
dk_alter LD_LIBRARY_PATH /broad/tools/Linux/x86_64/pkgs/fftw_gcc-4.3.2_3.1.3/lib

# Set up build env.
dk_alter LIBRARY_PATH /broad/tools/Linux/x86_64/pkgs/fftw_gcc-4.3.2_3.1.3/lib
dk_alter C_INCLUDE_PATH /broad/tools/Linux/x86_64/pkgs/fftw_gcc-4.3.2_3.1.3/include
dk_alter CPLUS_INCLUDE_PATH /broad/tools/Linux/x86_64/pkgs/fftw_gcc-4.3.2_3.1.3/include


