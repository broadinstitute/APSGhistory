#c libraries
#d ncurses

# Clear out any versions lingering around
unuse -q `dk_rep '*ncurses-*'`

dk_alter PATH /broad/tools/Linux/x86_64/pkgs/ncurses-5.7/bin
dk_alter MANPATH /broad/tools/Linux/x86_64/pkgs/ncurses-5.7/man

# For dynamic linking at runtime
dk_alter LD_LIBRARY_PATH /broad/tools/Linux/x86_64/pkgs/ncurses-5.7/lib

# For gcc
dk_alter LIBRARY_PATH /broad/tools/Linux/x86_64/pkgs/ncurses-5.7/lib
dk_alter C_INCLUDE_PATH /broad/tools/Linux/x86_64/pkgs/ncurses-5.7/include

