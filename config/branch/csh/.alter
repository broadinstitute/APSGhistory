# ALTER

if ( $#_dk_aa >= 2 ) then
  set _dk_op="use"
  if ( "$_dk_aa[1]" != "-a" ) then
    setenv _dk_pream "Prepending"
    if ($#_dk_aa == 3) then
      dk_alter "$_dk_aa[1]" "$_dk_aa[2]" "$_dk_aa[3]"
    else
      dk_alter "$_dk_aa[1]" "$_dk_aa[2]"
    endif
  else
    setenv _dk_pream "Appending"
    shift _dk_aa
    if ($#_dk_aa == 3) then
      dk_alter "$_dk_aa[1]" "$_dk_aa[2]" "$_dk_aa[3]"
    else
      dk_alter "$_dk_aa[1]" "$_dk_aa[2]"
    endif
  endif
else
  echo "Usage: alter [ -a ] VARIABLE COMPONENT [ SEPARATOR ]"
endif
unsetenv _dk_pream
