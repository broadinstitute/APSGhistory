#c IT/Systems
#d Set the system prompt

#dk_setenv PROMPT_COMMAND 'echo -ne "\033]0;${USER}@${HOSTNAME}: ${PWD}\007"'

case $TERM in
  xterm*)
    local TITLEBAR="\033]0;${USER}@${HOSTNAME}: ${PWD}\007"
    ;;
  *)
    local TITLEBAR=""
    ;;
esac

dk_setenv PS1 '${TITLEBAR}\[\033[01;32m\]\u@\h \[\033[01;34m\]\w \$ \[\033[00m\]'
