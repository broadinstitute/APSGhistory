<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 2.5//EN"
        "http://tuckey.org/res/dtds/urlrewrite2.5.dtd">

<urlrewrite>

    <rule>
        <from>^/users/(.*)$</from>
        <to type="forward">/users/viewpublicidentity.action?name=$1</to>
    </rule>

</urlrewrite>